<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Backend Assets -->
        <template id="web_assets_backend" name="web_assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link type="text/css" rel="stylesheet" href="/app_name/static/src/css/web_assets_backend.css" />
            </xpath>
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/app_name/static/src/js/web_assets_backend.js"></script>
            </xpath>
        </template>


        <!-- Frontend Assets -->
        <template id="web_assets_frontend" name="web_assets_frontend" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
                <link type="text/css" rel="stylesheet" href="/app_name/static/src/css/web_assets_frontend.css" />
            </xpath>
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/app_name/static/src/js/web_assets_frontend.js"></script>
            </xpath>
        </template>


        <!-- Common Assets -->
        <template id="web_assets_common" name="web_assets_common" inherit_id="web.assets_common">
            <xpath expr="." position="inside">
                <link type="text/css" rel="stylesheet" href="/app_name/static/src/css/web_assets_common.css" />
            </xpath>
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/app_name/static/src/js/web_assets_common.js"></script>
            </xpath>
        </template>
        
    </data>
</odoo>
